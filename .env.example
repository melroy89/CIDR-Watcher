# .env.example - CIDR Watcher
# Copy to .env and modify values as needed, or export these variables in your environment.
# This project uses godotenv for local development: https://github.com/joho/godotenv

# InfluxDB connection
INFLUX_ADDR="http://127.0.0.1:8086" # default in code: http://127.0.0.1:8086
INFLUX_DB="telegraf"                 # default measurement DB
INFLUX_USER=""                       # optional: Influx user
INFLUX_PASS=""                       # optional: Influx password

# MySQL DSN. Example value below uses go-sql-driver/mysql format:
#   user:pass@tcp(host:port)/dbname?parseTime=true
# MySQL DSN. Example value below uses go-sql-driver/mysql format with unix socket:
#   user:pass@unix(/var/run/mysqld/mysqld.sock)/dbname?parseTime=true
MYSQL_DSN="root:password@unix(/var/run/mysqld/mysqld.sock)/auditdb?parseTime=true"

# Watch list file path - one CIDR per line
WATCH_LIST_FILE="./watch_list.txt"

# Polling and reload intervals
POLL_INTERVAL_SECONDS=30        # default poll interval in seconds
WATCHLIST_RELOAD_SECONDS=500    # default reload interval in seconds
INFLUX_QUERY_LIMIT=5000         # maximum rows to query from InfluxDB per poll

# Mail/alerting configuration (optional)
#MAIL_FROM_NAME="CIDR Watcher"
#MAIL_FROM_ADDR="no-reply@example.com"
#MAIL_TO="alerts@example.com"
